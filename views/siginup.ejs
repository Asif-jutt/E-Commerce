

  <% layout("./layouts/boilerplate.ejs") %>

<div class="signup-container">
  <div class="signup-card">
    <div class="signup-header">
      <i class="fas fa-user-plus"></i>
      <h2>Create Account</h2>
      <p>Join us to access exclusive features</p>
    </div>
    
    <form class="signup-form" action="/admin/signup" method="POST">
      <div class="form-group">
        <label for="username">Username</label>
        <div class="input-with-icon">
          <i class="fas fa-user"></i>
          <input type="text" id="username" name="username" placeholder="Enter your username" required>
        </div>
      </div>
      
      <div class="form-group">
        <label for="email">Email Address</label>
        <div class="input-with-icon">
          <i class="fas fa-envelope"></i>
          <input type="email" id="email" name="email" placeholder="Enter your email" required>
        </div>
      </div>
      
      <div class="form-group">
        <label for="password">Password</label>
        <div class="input-with-icon">
          <i class="fas fa-lock"></i>
          <input type="password" id="password" name="password" placeholder="Create a password" required>
          <span class="toggle-password" onclick="togglePassword('password')">
            <i class="fas fa-eye"></i>
          </span>
        </div>
      </div>
      
      <!-- <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <div class="input-with-icon">
          <i class="fas fa-lock"></i>
          <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password" required>
          <span class="toggle-password" onclick="togglePassword('confirmPassword')">
            <i class="fas fa-eye"></i>
          </span>
        </div>
      </div> -->
      
      <button type="submit" class="signup-btn">
        <i class="fas fa-user-plus"></i>
        Sign Up
      </button>
    </form>
    
    <div class="signup-footer">
      <p>Already have an account? <a href="/admin/signin">Sign In</a></p>
    </div>
  </div>
</div>

<style>
  .signup-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    padding: 20px;
    background:#ddd;
    background-size: cover;
  }
  
  .signup-card {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    padding: 30px;
    width: 100%;
    max-width: 400px;
    text-align: center;
  }
  
  .signup-header {
    margin-bottom: 25px;
  }
  
  .signup-header i {
    font-size: 40px;
    color: #4cafef;
    margin-bottom: 15px;
  }
  
  .signup-header h2 {
    color: #333;
    margin-bottom: 8px;
    font-weight: 600;
  }
  
  .signup-header p {
    color: #666;
    font-size: 14px;
  }
  
  .form-group {
    margin-bottom: 20px;
    text-align: left;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #444;
    font-size: 14px;
  }
  
  .input-with-icon {
    position: relative;
  }
  
  .input-with-icon i:first-of-type {
    position: absolute;
    left: 15px;
    top: 50%;
    transform: translateY(-50%);
    color: #777;
  }
  
  .input-with-icon input {
    width: 100%;
    padding: 12px 15px 12px 45px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 15px;
    transition: all 0.3s;
  }
  
  .input-with-icon input:focus {
    border-color: #4cafef;
    outline: none;
    box-shadow: 0 0 8px rgba(76, 175, 239, 0.4);
  }
  
  .toggle-password {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    color: #777;
  }
  
  .signup-btn {
    width: 100%;
    padding: 14px;
    background: #4cafef;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    margin-top: 10px;
  }
  
  .signup-btn:hover {
    background: #2196f3;
    transform: translateY(-2px);
  }
  
  .signup-btn i {
    margin-right: 8px;
  }
  
  .signup-footer {
    margin-top: 20px;
    padding-top: 15px;
    border-top: 1px solid #eee;
    font-size: 14px;
    color: #555;
  }
  
  .signup-footer a {
    color: #4cafef;
    text-decoration: none;
    font-weight: 600;
  }
  
  .signup-footer a:hover {
    text-decoration: underline;
  }
  
  @media (max-width: 480px) {
    .signup-card {
      padding: 20px;
    }
  }
</style>

