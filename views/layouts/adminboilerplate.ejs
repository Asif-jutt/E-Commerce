            <li><a href="/admin/customer" class="nav-link"><i class="fas fa-shopping-cart"></i> Orders</a></li>
            <li><a href="#" class="nav-link"><i class="fas fa-chart-bar"></i> Analytics</a></li>
            <li><a href="#" class="nav-link"><i class="fas fa-cog"></i> Settings</a></li>
        </ul>
        
        <div class="navbar-actions">
            <a href="/admin" class="btn btn-outline"><i class="fas fa-arrow-left"></i> Store</a>
           <% if (isAuthenticated) { %>
    <form action="/logout" method="POST" style="display:inline;">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-sign-out-alt"></i> Logout
        </button>
    </form>
<% } else { %>
    <a href="/signin" class="btn btn-outline-primary">
        <i class="fas fa-sign-in-alt"></i> Login
    </a>
<% } %>

      </div>
    </nav>
<%- include('../flash.ejs') %>
    <!-- Main Content Area -->
    <%- body %>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-column">
                <h3>About Us</h3>
                <p>We create high-quality web templates and components to help developers build beautiful websites faster.</p>
                <div class="footer-social">
                    <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>

            <div class="footer-column">
                <h3>Quick Links</h3>
                <ul class="footer-links">
                    <li><a href="#"><i class="fas fa-chevron-right"></i> Home</a></li>
                    <li><a href="#"><i class="fas fa-chevron-right"></i> About</a></li>
                    <li><a href="#"><i class="fas fa-chevron-right"></i> Services</a></li>
                    <li><a href="#"><i class="fas fa-chevron-right"></i> Portfolio</a></li>
                    <li><a href="#"><i class="fas fa-chevron-right"></i> Contact</a></li>
