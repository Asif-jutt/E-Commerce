<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel - E Commerce</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f4f6f9;
    }
    .navbar {
      background: #343a40;
    }
    .navbar-brand {
      color: #fff !important;
    }
    .card {
      border-radius: 12px;
      transition: transform 0.2s ease-in-out;
    }
    .card:hover {
      transform: scale(1.02);
    }
    footer {
      background: #343a40;
      color: white;
      padding: 15px 0;
      margin-top: 20px;
    }
    .btn-back {
      background: #6c757d;
      color: white;
      border-radius: 8px;
      margin-bottom: 20px;
    }
    .btn-back:hover {
      background: #5a6268;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">E Commerce - Admin Panel</a>
    </div>
  </nav>

  <div class="container my-4">
    <!-- Back Button -->
    <a href="/" class="btn btn-back">⬅ Back to Home</a>

    <!-- Add Product -->
    <div class="card shadow p-4 mb-4">
      <h4 class="mb-3">Add Product</h4>
      <form action="/" method="POST">
        <div class="row g-3">
          <div class="col-md-4">
            <input type="text" name="name" class="form-control" placeholder="Product Name" required>
          </div>
          <div class="col-md-2">
            <input type="number" name="price" class="form-control" placeholder="Price" required>
          </div>
          <div class="col-md-2">
            <input type="number" name="stock" class="form-control" placeholder="Stock" required>
          </div>
          <div class="col-md-4">
            <input type="text" name="image" class="form-control" placeholder="Image URL" required>
          </div>
        </div>
        <button type="submit" class="btn btn-success mt-3">Add Product</button>
      </form>
    </div>

    <!-- Products Table -->
    <div class="card shadow p-4">
      <h4 class="mb-3">Products List</h4>
      <table class="table table-bordered align-middle text-center">
        <thead class="table-dark">
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price ($)</th>
            <th>Stock</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
          <tr>
            <td><img src="<%= product.image %>" alt="<%= product.name %>" width="60" height="60" style="object-fit: cover; border-radius: 6px;"></td>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.stock %></td>
            <td>
              <a href="/admin/view/<%= product.id %>" class="btn btn-info btn-sm">View</a>
              <a href="/admin/edit/<%= product.id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/admin/delete/<%= product.id %>" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Footer -->
  <footer class="text-center">
    <p class="mb-0">© 2025 E Commerce | Admin Panel</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
