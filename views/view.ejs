<% layout("./layouts/boilerplate") %>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Details</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: #1318174b;
      }
      .product-card {
        max-width: 500px;
        margin: auto;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.1);
        background: #fff;
        transition: transform 0.2s;
      }
      .product-card:hover {
        transform: translateY(-5px);
      }
      .product-img {
        width: 100%;
        height: 300px;
        object-fit: cover;
      }
      .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 20px;
        text-decoration: none;
        color: #fff;
        background: #6c757d;
        padding: 8px 14px;
        border-radius: 8px;
        transition: 0.2s;
      }
      .back-btn:hover {
        background: #5a6268;
        text-decoration: none;
        color: #fff;
      }
      .price {
        font-size: 1.3rem;
        font-weight: bold;
        color: #28a745;
      }
    </style>
  </head>
  <body>
    <div class="container my-5 text-center">
      <a href="/admin" class="back-btn">
        <img
          src="https://img.icons8.com/ios-filled/24/ffffff/left.png"
          alt="Back"
        />
        Back to Products
      </a>

      <h1 class="mb-4 fw-bold">Product Details</h1>

      <% if (prod) { %>
      <div class="product-card">
        <img
          src="<%= prod.image %>"
          alt="<%= prod.name %>"
          class="product-img"
        />
        <div class="p-4">
          <h3 class="fw-bold"><%= prod.item %></h3>
          <p class="price">$<%= prod.price %></p>
          <p class="text-muted">Stock Available: <%= prod.stock %></p>
        </div>
      </div>
      <% } else { %>
      <p class="text-danger fw-bold">‚ùå Product not found!</p>
      <% } %>
    </div>
  </body>
